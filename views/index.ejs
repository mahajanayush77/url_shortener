<!DOCTYPE html>
<html lang="en">
<head>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortener</title>
</head>
<body>
    <div class="container">
        <h1 class="display-4"> Url Shrinker </h1>
        <form action="/shorturls" class="form-inline" method="POST">
            <label for="fullUrl" class="sr-only">Url</label>
            <input id="fullUrl" name="fullUrl" placeholder="URL" type="url" required class="form-control mr-2 col">
            <button class="btn btn-primary" type="submit">Shrink </button>
        </form>
    </div>
    
<div class="container mt-4">
    <table class="table table-striped table-responsive table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Full Url</th>
                <th>Shortened Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
           
           <% shortUrls.forEach(element => { %>
            <tr>
                <td>
                    <a href="<%= element.full %>">
                        <%= element.full %> </a>
                </td>
                <td>
                    <a href="<%= element.short %>">
                        <%= element.short %> </a>
                </td>
                <td>
                    <%= element.clicks %>
                </td>
            </tr>
           <% }) %>
            
        </tbody>
    </table>
</div>
    
</body>
</html>